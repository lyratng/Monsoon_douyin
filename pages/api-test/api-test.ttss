/* API测试页面样式 */

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  color: white;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  opacity: 0.9;
}

.buttons {
  margin-bottom: 30rpx;
}

.btn {
  width: 100%;
  margin-bottom: 20rpx;
  padding: 25rpx;
  border-radius: 15rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn.primary {
  background-color: #4CAF50;
  color: white;
}

.btn.primary.disabled {
  background-color: #cccccc;
  color: #999999;
}

.btn.secondary {
  background-color: #2196F3;
  color: white;
  font-size: 24rpx;
  padding: 20rpx;
}

.btn.outline {
  background-color: transparent;
  color: #666;
  border: 2rpx solid #ddd;
  font-size: 24rpx;
  padding: 20rpx;
}

.quick-tests {
  display: flex;
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.quick-tests .btn {
  flex: 1;
  margin-bottom: 0;
}

.log-controls {
  display: flex;
  gap: 15rpx;
}

.log-controls .btn {
  flex: 1;
  margin-bottom: 0;
}

.results {
  background-color: white;
  padding: 20rpx;
  border-radius: 15rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.results-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.result-item:last-child {
  border-bottom: none;
}

.result-label {
  font-size: 28rpx;
  color: #666;
}

.result-value {
  font-size: 28rpx;
  font-weight: bold;
}

.result-value.success {
  color: #4CAF50;
}

.result-value.error {
  color: #f44336;
}

.logs {
  background-color: white;
  border-radius: 15rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  height: 600rpx;
  display: flex;
  flex-direction: column;
}

.logs-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  padding: 20rpx 20rpx 0;
}

.logs-content {
  flex: 1;
  padding: 0 20rpx 20rpx;
}

.log-item {
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.log-item:last-child {
  border-bottom: none;
}

.log-text {
  font-size: 24rpx;
  color: #333;
  line-height: 1.5;
  font-family: 'Courier New', monospace;
  word-break: break-all;
}

.log-placeholder {
  text-align: center;
  padding: 50rpx;
  color: #999;
}

.instructions {
  background-color: white;
  padding: 20rpx;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.instructions-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.instruction-item {
  padding: 10rpx 0;
  color: #666;
  font-size: 26rpx;
  line-height: 1.4;
}
