<view class="container gradient-bg">
  <!-- 极简初始页面 -->
  <view wx:if="{{showInitial}}" class="initial-container">
    <view class="initial-hero">
      <text class="initial-title">季风</text>
      <text class="initial-subtitle">AI穿搭风格诊断</text>
    </view>
    
    <view class="initial-actions">
      <button class="initial-btn" bindtap="startTest">开启风格之旅</button>
    </view>
  </view>

  <!-- 首次用户引导页面 -->
  <view wx:elif="{{!hasReport}}" class="first-time-container">
    <view class="hero-section">
      <text class="title-main">季风</text>
      <text class="subtitle">AI穿搭风格诊断</text>
      <text class="description">
        发现你的专属调色盘与风格密码
      </text>
    </view>

    <view class="start-button-container">
      <button class="start-btn" bindtap="startTest">
        开启风格之旅
      </button>
      <button class="debug-btn" bindtap="openGPT5Test">
        🧪 GPT-5测试
      </button>
    </view>
  </view>

  <!-- 已有报告的用户页面 - 极简风格 -->
  <view wx:else class="report-simple-container">
    <!-- 全屏背景照片 -->
    <view class="photo-background">
      <image class="main-photo" src="/assets/images/home/main-photo.jpg" />
    </view>
    
    <!-- 浮动内容区域 -->
    <view class="floating-content">
      <view class="simple-hero">
        <text class="simple-title">季风</text>
        <text class="simple-subtitle">AI穿搭风格诊断</text>
        <text class="simple-description">你的专属风格报告已生成</text>
      </view>
      
      <view class="simple-actions">
        <button class="simple-btn primary" bindtap="viewReport">查看风格报告</button>
        <button class="simple-btn secondary" bindtap="retakeTest">重新测试</button>
        <button class="simple-btn debug" bindtap="openGPT5Test">🧪 GPT-5测试</button>
      </view>
    </view>
  </view>
</view>
