/* 主页样式 - 极简美学设计 */

.container {
  min-height: 100vh;
  background: #F5F5F0;
  padding: 0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

/* 极简初始页面 */
.initial-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
  padding: 40rpx;
  text-align: center;
  box-sizing: border-box;
}

.initial-hero {
  margin-bottom: 140rpx;
}

.initial-title {
  font-size: 120rpx;
  font-weight: 200;
  color: #2C2C2C;
  letter-spacing: 12rpx;
  margin-bottom: 60rpx;
  display: block;
  animation: fadeIn 1s ease-out;
}

.initial-subtitle {
  font-size: 28rpx;
  font-weight: 300;
  color: #999;
  letter-spacing: 4rpx;
  display: block;
  animation: fadeIn 1s ease-out 0.3s;
  animation-fill-mode: both;
}

.initial-actions {
  width: 100%;
}

.initial-btn {
  width: 280rpx;
  height: 88rpx;
  background: #2C2C2C;
  color: #FFFFFF;
  border: none;
  border-radius: 44rpx;
  font-size: 28rpx;
  font-weight: 300;
  letter-spacing: 2rpx;
  transition: all 0.3s ease;
  animation: fadeIn 1s ease-out 0.6s;
  animation-fill-mode: both;
}

.initial-btn::after {
  border: none;
}

.initial-btn:active {
  background: #1A1A1A;
  transform: scale(0.98);
}

/* 已有报告的极简页面 */
.report-simple-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100vw;
  overflow: hidden;
  position: relative;
}

/* 上半部分：照片区域 - 强制覆盖到最顶部 */
.photo-background {
  position: fixed;
  top: 0 !important;
  left: 0 !important;
  right: 0 !important;
  width: 100vw !important;
  height: 60vh !important; /* 恢复固定高度 */
  z-index: 9999;
  overflow: hidden; /* 恢复hidden */
  transform: translateY(-44px); /* 强制向上偏移，覆盖状态栏 */
}

.main-photo {
  width: 100%;
  height: 100%;
  object-fit: cover; /* 恢复cover模式 */
  object-position: top center; /* 恢复top center */
  display: block;
}

/* 浮动内容区域 */
.floating-content {
  position: fixed;
  top: calc(60vh - 130rpx); /* 恢复原来的位置计算 */
  left: 0;
  right: 0;
  height: auto; /* 改为自动高度 */
  z-index: 10000; /* 提升到最高层 */
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  padding: 0 40rpx;
  text-align: center;
  box-sizing: border-box;
  background: transparent; /* 改为透明背景，允许重叠显示 */
}

.simple-hero {
  margin-top: 0; /* 确保顶部无间距 */
  margin-bottom: 60rpx; /* 减少文字和按钮之间的间距 */
  padding-top: 0; /* 确保顶部无padding */
}

.simple-title {
  font-size: 100rpx;
  font-weight: 200;
  color: #2C2C2C;
  letter-spacing: 10rpx;
  margin-top: 0; /* 确保顶部无间距 */
  margin-bottom: 20rpx; /* 从40rpx减少到20rpx */
  display: block;
  animation: fadeIn 1s ease-out;
  text-shadow: 0 2rpx 8rpx rgba(255, 255, 255, 0.8), 0 0 20rpx rgba(255, 255, 255, 0.6); /* 白色阴影增强可读性 */
}

.simple-subtitle {
  font-size: 26rpx;
  font-weight: 300;
  color: #999;
  letter-spacing: 3rpx;
  margin-bottom: 15rpx; /* 从30rpx减少到15rpx */
  display: block;
  animation: fadeIn 1s ease-out 0.3s;
  animation-fill-mode: both;
  text-shadow: 0 1rpx 4rpx rgba(255, 255, 255, 0.8); /* 白色阴影 */
}

.simple-description {
  font-size: 30rpx;
  font-weight: 300;
  color: #666;
  letter-spacing: 1rpx;
  display: block;
  animation: fadeIn 1s ease-out 0.6s;
  animation-fill-mode: both;
  text-shadow: 0 1rpx 4rpx rgba(255, 255, 255, 0.8); /* 白色阴影 */
}

.simple-actions {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 16rpx; /* 从24rpx减少到16rpx */
  align-items: center;
}

.simple-btn {
  width: 320rpx;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 300;
  letter-spacing: 2rpx;
  border: none;
  transition: all 0.3s ease;
  animation: fadeIn 1s ease-out 0.9s;
  animation-fill-mode: both;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  line-height: 1;
}

.simple-btn::after {
  border: none;
}

.simple-btn.primary {
  background: #2C2C2C;
  color: #FFFFFF;
  box-shadow: 0 8rpx 32rpx rgba(44, 44, 44, 0.2);
}

.simple-btn.primary:active {
  background: #1A1A1A;
  transform: scale(0.95);
}

.simple-btn.secondary {
  background: #E8E8E3;
  color: #666;
  border: 2rpx solid #E8E8E3;
  margin-top: 20rpx; /* 单独给"重新测试"按钮添加上边距 */
}

.simple-btn.secondary:active {
  background: #FAFAFA;
  border-color: #2C2C2C;
  transform: scale(0.95);
}

.simple-btn.debug {
  background: rgba(255, 193, 7, 0.9);
  border: 2rpx solid rgba(255, 193, 7, 0.6);
  color: rgba(0, 0, 0, 0.8);
  font-size: 26rpx;
  margin-top: 20rpx;
  width: 200rpx;
}

.simple-btn.debug:active {
  background: rgba(255, 193, 7, 1);
  transform: scale(0.95);
}

/* 首次用户页面 */
.first-time-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
  padding: 40rpx;
  text-align: center;
  box-sizing: border-box;
}

.hero-section {
  margin-bottom: 100rpx;
}

.title-main {
  font-size: 88rpx;
  font-weight: 300;
  color: #2C2C2C;
  letter-spacing: 8rpx;
  margin-bottom: 40rpx;
  display: block;
  animation: fadeIn 0.8s ease-out;
}

.subtitle {
  font-size: 32rpx;
  font-weight: 300;
  color: #2C2C2C;
  letter-spacing: 2rpx;
  margin-bottom: 32rpx;
  display: block;
  animation: fadeIn 0.8s ease-out 0.2s;
  animation-fill-mode: both;
}

.description {
  font-size: 32rpx;
  font-weight: 300;
  color: #666;
  letter-spacing: 1rpx;
  line-height: 1.6;
  display: block;
  animation: fadeIn 0.8s ease-out 0.4s;
  animation-fill-mode: both;
}

/* 开始按钮 */
.start-button-container {
  width: 100%;
  max-width: 480rpx;
}

.start-btn {
  width: 100%;
  height: 88rpx;
  background: #E8E8E3;
  color: #999;
  border: none;
  border-radius: 44rpx;
  font-size: 28rpx;
  font-weight: 300;
  letter-spacing: 2rpx;
  transition: all 0.3s ease;
  animation: fadeIn 0.8s ease-out 0.6s;
  animation-fill-mode: both;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.start-btn::after {
  border: none;
}

.start-btn:active {
  background: #2C2C2C;
  color: #FFFFFF;
  transform: scale(0.98);
  box-shadow: 0 16rpx 48rpx rgba(44, 44, 44, 0.2);
}

.debug-btn {
  width: 280rpx;
  height: 72rpx;
  border-radius: 36rpx;
  background: rgba(255, 193, 7, 0.9);
  color: rgba(0, 0, 0, 0.8);
  border: 2rpx solid rgba(255, 193, 7, 0.6);
  font-size: 26rpx;
  font-weight: 500;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(255, 193, 7, 0.3);
}

.debug-btn::after {
  border: none;
}

.debug-btn:active {
  background: rgba(255, 193, 7, 1);
  transform: scale(0.95);
}

