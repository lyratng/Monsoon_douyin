/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .title-main {
    font-size: 72rpx;
    letter-spacing: 6rpx;
  }
  
  .subtitle {
    font-size: 28rpx;
  }
  
  .description {
    font-size: 26rpx;
  }
}

/* 确保容器不会超出屏幕 */
.first-time-container,
.report-container {
  width: 100%;
  box-sizing: border-box;
}