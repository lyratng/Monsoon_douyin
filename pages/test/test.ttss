/* 测试页面样式 - 极简美学设计 */

.test-container {
  min-height: 100vh;
  background: #F5F5F0;
  padding: 0 0 200rpx 0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

/* 进度条 */
.progress-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #E8E8E3;
  z-index: 1000;
}

.progress-fill {
  height: 100%;
  background: #2C2C2C;
  transition: width 0.3s ease;
}

/* 步骤指示器 */
.step-indicator {
  position: fixed;
  top: 60rpx;
  right: 40rpx;
  background: #FFFFFF;
  border: 1rpx solid #E8E8E3;
  padding: 16rpx 24rpx;
  border-radius: 32rpx;
  z-index: 999;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.step-text {
  font-size: 24rpx;
  color: #666;
  font-weight: 300;
  letter-spacing: 0.5rpx;
}

/* 步骤内容 */
.step-content {
  padding: 140rpx 40rpx 40rpx 40rpx;
  max-width: 640rpx;
  margin: 0 auto;
}

.step-title {
  font-size: 48rpx;
  font-weight: 300;
  color: #2C2C2C;
  text-align: center;
  letter-spacing: 2rpx;
  margin-bottom: 24rpx;
}

.step-description {
  font-size: 32rpx;
  font-weight: 300;
  color: #666;
  text-align: center;
  letter-spacing: 1rpx;
  margin-bottom: 80rpx;
  line-height: 1.6;
}

/* 表单组件 */
.form-group {
  margin-bottom: 60rpx;
}

.form-label {
  font-size: 32rpx;
  font-weight: 300;
  color: #2C2C2C;
  letter-spacing: 1rpx;
  margin-bottom: 32rpx;
  display: block;
}

.value-display {
  color: #2C2C2C;
  font-weight: 300;
}

/* 性别选择 - 简单版本 */
.gender-options {
  display: flex;
  gap: 24rpx;
}

.option-btn {
  flex: 1;
  background: #FFFFFF;
  border: 1rpx solid #E8E8E3;
  border-radius: 16rpx;
  padding: 32rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 300;
  color: #2C2C2C;
  letter-spacing: 1rpx;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.option-btn.active {
  background: #2C2C2C;
  color: #FFFFFF;
  border-color: #2C2C2C;
  box-shadow: 0 8rpx 32rpx rgba(44, 44, 44, 0.2);
}

.option-btn:active {
  transform: scale(0.98);
}

/* 滑动条 */
.custom-slider {
  margin: 32rpx 0;
}

/* 手腕颜色选择 - 白色容器包装 */
.wrist-color-options {
  background: #FFFFFF;
  border: 1rpx solid #E8E8E3;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  display: flex;
  gap: 24rpx;
  justify-content: center;
}

.wrist-option {
  background: #F5F5F0;
  border: 1rpx solid #E8E8E3;
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  flex: 1;
  transition: all 0.3s ease;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 280rpx;  /* 增加高度以适配3:4图片比例 */
}

.wrist-option.active {
  border-color: #2C2C2C;
  background: #2C2C2C;
  color: #FFFFFF;
  box-shadow: 0 8rpx 32rpx rgba(44, 44, 44, 0.2);
}

.wrist-option:active {
  transform: scale(0.98);
}

/* 手腕图片样式 - 3:4比例 */
.wrist-image {
  width: 120rpx;
  height: 160rpx;  /* 3:4比例 */
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  object-fit: cover;
  border: 1rpx solid #E8E8E3;
  transition: all 0.3s ease;
}

.wrist-option.active .wrist-image {
  border-color: #FFFFFF;
  box-shadow: 0 4rpx 16rpx rgba(255, 255, 255, 0.3);
}

/* 手腕标签文字 - 按照UI设计指南 */
.wrist-label {
  font-size: 28rpx;
  font-weight: 300;
  color: #2C2C2C;
  letter-spacing: 1rpx;
  line-height: 1.4;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

.wrist-option.active .wrist-label {
  color: #FFFFFF;
}


.color-detail {
  font-size: 22rpx;
  font-weight: 300;
  color: #666;
  letter-spacing: 0.5rpx;
  line-height: 1.4;
}

/* 照片上传区域 - 白色容器包装 */
.photo-upload-container {
  background: #FFFFFF;
  border: 1rpx solid #E8E8E3;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.upload-area {
  background: #F5F5F0;
  border: 2rpx dashed #E8E8E3;
  border-radius: 16rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  transition: all 0.3s ease;
  cursor: pointer;
}

.upload-area:active {
  border-color: #2C2C2C;
  background: #E8E8E3;
}

.uploaded-image-container {
  text-align: center;
}

.reupload-btn {
  background: #F5F5F0;
  border: 1rpx solid #E8E8E3;
  border-radius: 16rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  font-weight: 300;
  color: #2C2C2C;
  letter-spacing: 1rpx;
  margin-top: 24rpx;
}

.reupload-btn::after {
  border: none;
}

.analysis-loading, .analysis-result {
  margin-top: 32rpx;
  text-align: center;
}

.upload-icon {
  font-size: 64rpx;
  color: #E8E8E3;
  margin-bottom: 16rpx;
  display: block;
}

.upload-text {
  font-size: 28rpx;
  font-weight: 300;
  color: #2C2C2C;
  letter-spacing: 1rpx;
  margin-bottom: 8rpx;
}

.upload-hint {
  font-size: 24rpx;
  font-weight: 300;
  color: #999;
  letter-spacing: 0.5rpx;
  line-height: 1.4;
}

.uploaded-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  margin: 0 auto 16rpx;
  display: block;
  border: 1rpx solid #E8E8E3;
}

/* 颜色选择网格 - 正方形白色容器包装 */
.color-grid {
  background: #FFFFFF;
  border: 1rpx solid #E8E8E3;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.color-item {
  background: #F5F5F0;
  border: 1rpx solid #E8E8E3;
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  transition: all 0.3s ease;
  position: relative;
  cursor: pointer;
  aspect-ratio: 1;  /* 强制为正方形 */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

/* 右上角方框已移除 */

.color-item.selected {
  border-color: #2C2C2C !important;
  background: #2C2C2C !important;
  color: #FFFFFF !important;
  box-shadow: 0 8rpx 32rpx rgba(44, 44, 44, 0.2) !important;
}

/* 选中后的右上角方框和打钩效果已完全移除 */

.color-item:active {
  transform: scale(0.98);
}

.color-square {
  width: 60rpx;
  height: 60rpx;
  border-radius: 8rpx;  /* 正方形圆角 */
  margin: 0 auto 12rpx;
  border: 1rpx solid #E8E8E3;
}

.color-square.with-border {
  border: 2rpx solid #999;
}

/* 保留原有的圆形样式（如果需要） */
.color-sample {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin: 0 auto 12rpx;
  border: 1rpx solid #E8E8E3;
}

.color-name {
  font-size: 28rpx;
  font-weight: 300;
  color: #2C2C2C;
  letter-spacing: 1rpx;
}

/* 场合选择 - 白色容器包装 */
.occasion-list {
  background: #FFFFFF;
  border: 1rpx solid #E8E8E3;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.occasion-item {
  background: #F5F5F0;
  border: 1rpx solid #E8E8E3;
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  cursor: pointer;
}

.occasion-item.selected {
  border-color: #2C2C2C !important;
  background: #2C2C2C !important;
  color: #FFFFFF !important;
  box-shadow: 0 8rpx 32rpx rgba(44, 44, 44, 0.2) !important;
}

.occasion-item:active {
  transform: scale(0.98);
}

/* 小白方框和打钩样式已移除
.occasion-checkbox {
  width: 24rpx;
  height: 24rpx;
  border: 2rpx solid #E8E8E3;
  border-radius: 4rpx;
  margin-right: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.occasion-item.selected .occasion-checkbox {
  background: #FFFFFF;
  border-color: #FFFFFF;
  color: #2C2C2C;
  font-weight: bold;
}
*/

.occasion-name {
  font-size: 28rpx;
  font-weight: 300;
  letter-spacing: 1rpx;
  flex: 1;
}

.occasion-icon {
  font-size: 40rpx;
  margin-bottom: 12rpx;
  display: block;
}

.occasion-text {
  font-size: 26rpx;
  font-weight: 300;
  letter-spacing: 0.5rpx;
}

/* 单选选项容器 */
.radio-options {
  background: #FFFFFF;
  border: 1rpx solid #E8E8E3;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.radio-item {
  background: #F5F5F0;
  border: 1rpx solid #E8E8E3;
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  cursor: pointer;
}

.radio-item.selected {
  border-color: #2C2C2C;
  background: #2C2C2C;
  color: #FFFFFF;
  box-shadow: 0 8rpx 32rpx rgba(44, 44, 44, 0.2);
}

.radio-item:active {
  transform: scale(0.98);
}

.radio-circle {
  width: 24rpx;
  height: 24rpx;
  border: 2rpx solid #E8E8E3;
  border-radius: 50%;
  margin-right: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.radio-item.selected .radio-circle {
  background: #FFFFFF;
  border-color: #FFFFFF;
}

.radio-dot {
  width: 12rpx;
  height: 12rpx;
  background: #2C2C2C;
  border-radius: 50%;
}

.radio-item text {
  font-size: 28rpx;
  font-weight: 300;
  letter-spacing: 1rpx;
  flex: 1;
}

/* 心理问题 */
.psychology-question {
  background: #FFFFFF;
  border: 1rpx solid #E8E8E3;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.question-title {
  font-size: 32rpx;
  font-weight: 300;
  color: #2C2C2C;
  letter-spacing: 1rpx;
  line-height: 1.6;
  margin-bottom: 32rpx;
  text-align: center;
}

.question-options {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.option-item {
  background: transparent;
  border: none;
  border-radius: 0;
  padding: 24rpx 0;
  transition: all 0.3s ease;
  display: flex;
  align-items: flex-start;
  cursor: pointer;
  border-bottom: 1rpx solid #E8E8E3;
}

.option-item.selected {
  background: #F5F5F0;
  color: #2C2C2C;
  border-bottom-color: #2C2C2C;
  border-radius: 8rpx;
  margin: 0 -20rpx;
  padding: 24rpx 20rpx;
}

.option-item:active {
  transform: scale(0.98);
}

.option-label {
  width: 40rpx;
  height: 40rpx;
  background: #E8E8E3;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  font-size: 24rpx;
  font-weight: 300;
  letter-spacing: 0;
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.option-item.selected .option-label {
  background: #2C2C2C;
  color: #FFFFFF;
}

.option-item text {
  font-size: 28rpx;
  font-weight: 300;
  color: #2C2C2C;
  letter-spacing: 1rpx;
  line-height: 1.5;
  flex: 1;
}

.option-item.selected text {
  color: #2C2C2C;
}

.option-item:last-child {
  border-bottom: none;
}

/* MBTI选择 */
.mbti-grid {
  background: #FFFFFF;
  border: 1rpx solid #E8E8E3;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  margin-bottom: 40rpx;
}

.mbti-item {
  background: #F5F5F0;
  border: 1rpx solid #E8E8E3;
  border-radius: 16rpx;
  padding: 24rpx 16rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 300;
  color: #2C2C2C;
  letter-spacing: 1rpx;
  transition: all 0.3s ease;
  cursor: pointer;
  position: relative;
}

.mbti-item.selected {
  background: #2C2C2C;
  color: #FFFFFF;
  border-color: #2C2C2C;
  box-shadow: 0 8rpx 32rpx rgba(44, 44, 44, 0.2);
}

.mbti-item:active {
  transform: scale(0.98);
}

.mbti-uncertain {
  background: #FFFFFF;
  border: 1rpx solid #E8E8E3;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

/* 底部导航 */
.navigation-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  border-top: 1rpx solid #E8E8E3;
  padding: 24rpx 40rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  display: flex;
  gap: 20rpx;
  z-index: 100;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.nav-btn {
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 28rpx;
  font-weight: 300;
  letter-spacing: 1rpx;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.nav-btn::after {
  border: none;
}

.btn-secondary {
  flex: 1;
  background: #F5F5F0;
  color: #666;
  border: 1rpx solid #E8E8E3;
}

.btn-secondary:active {
  background: #E8E8E3;
  transform: scale(0.98);
}

.btn-primary {
  flex: 2;
  background: #E8E8E3;
  color: #999;
}

.btn-primary.full-width {
  flex: 1;
}

.btn-primary:not([disabled]) {
  background: #2C2C2C;
  color: #FFFFFF;
  box-shadow: 0 8rpx 32rpx rgba(44, 44, 44, 0.2);
}

.btn-primary:active {
  transform: scale(0.98);
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-content {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 60rpx;
  text-align: center;
  max-width: 400rpx;
}

/* 加载图标动画已移除
.loading-icon {
  font-size: 64rpx;
  margin-bottom: 24rpx;
  display: block;
  animation: spin 2s linear infinite;
}
*/

.loading-text {
  font-size: 32rpx;
  font-weight: 300;
  color: #2C2C2C;
  letter-spacing: 1rpx;
  margin-bottom: 16rpx;
}

.loading-hint {
  font-size: 24rpx;
  font-weight: 300;
  color: #666;
  letter-spacing: 0.5rpx;
  line-height: 1.4;
}

/* 旋转动画已移除
@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}
*/

/* 动画效果 */
.fade-in {
  animation: fadeIn 0.6s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .step-title {
    font-size: 44rpx;
  }
  
  .step-description {
    font-size: 30rpx;
  }
  
  .form-label {
    font-size: 30rpx;
  }
}

/* 确保容器不会超出屏幕 */
.step-content {
  width: 100%;
  box-sizing: border-box;
}