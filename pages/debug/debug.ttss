}

/* ËØ¥ÊòéÂå∫Âüü */
.instructions {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.instructions-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.instructions-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.instruction-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  padding-left: 12rpx;
  position: relative;
}

.instruction-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 6rpx;
  background: #4a90e2;
  border-radius: 50%;
}
