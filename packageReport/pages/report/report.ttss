.nav-title {
  font-size: 36rpx;
  font-weight: 300;
  color: #2C2C2C;
  letter-spacing: 2rpx;
  text-align: center;
}

.nav-title.centered {
  font-size: 36rpx;
  font-weight: 300;
  color: #2C2C2C;
  letter-spacing: 2rpx;
}

