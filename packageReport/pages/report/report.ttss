}

.secondary-btn {
  background: #F5F5F0;
  color: #666;
  border: 2rpx solid #E8E8E3;
}

.secondary-btn:active {
  background: #E8E8E3;
  transform: scale(0.98);
}

.primary-btn {
  background: #2C2C2C;
  color: #FFFFFF;
  box-shadow: 0 12rpx 40rpx rgba(44, 44, 44, 0.25);
}

.primary-btn:active {
  transform: scale(0.98);
}

/* 分享成功提示 */
.share-success {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: #FFFFFF;
  border: 1rpx solid #E8E8E3;
  border-radius: 20rpx;
  padding: 40rpx;
  text-align: center;
  z-index: 1000;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.2);
}

.success-icon {
  font-size: 64rpx;
  color: #4CAF50;
  margin-bottom: 24rpx;
  display: block;
}

.success-text {
  font-size: 32rpx;
  font-weight: 300;
  color: #2C2C2C;
  letter-spacing: 1rpx;
}

/* 动画效果 */
.fade-in {
  animation: fadeIn 0.8s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .header-first-line {
    gap: 30rpx; /* 小屏幕减少间距 */
  }
  
  .user-type {
    font-size: 56rpx;
  }
  
  .user-subtype {
    font-size: 36rpx;
  }
  
  .type-description {
    font-size: 30rpx;
  }
  
  .color-palette {
    grid-template-columns: repeat(4, 1fr); /* 手机端也保持4列 */
    justify-items: center;
    width: 100%;
    margin-left: auto;
    margin-right: auto;
  }

  .season-grid {
    gap: 16rpx; /* 小屏幕也保持较大间距 */
    grid-template-columns: 1fr 1fr 1fr 1fr; /* 小屏幕也保持一行四个 */
  }
  
  .season-card {
    /* aspect-ratio: 1 自动适应，保持正方形基准高度 */
  }
  
  .season-label {
    font-size: 40rpx; /* 小屏幕减小字号 */
  }

  .card-title {
    font-size: 40rpx;
    text-align: center;
    display: block;
    width: 100%;
  }

  .card-content {
    font-size: 34rpx;
  }

  .suggestion-text {
    font-size: 34rpx;
    color: #666;
    text-align: center;
    width: 100%;
  }

  .modal-material-name {
    font-size: 34rpx; /* 小屏幕材质名称字号 */
  }
  
  .modal-season-name {
    font-size: 40rpx; /* 小屏幕季节标题字号 */
  }

  .category-title {
    font-size: 36rpx;
  }

  .outfit-tag {
    font-size: 30rpx;
  }

  .tips-title {
    font-size: 40rpx;
  }

  .tip-content {
    font-size: 34rpx;
  }

  .action-btn {
    font-size: 34rpx;
  }
}

/* 确保容器不会超出屏幕 */
.report-content {
  width: 100%;
  box-sizing: border-box;
  overflow-x: hidden;
}