/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 40rpx;
  padding-top: 60rpx;
  background: linear-gradient(135deg, #F5F5F0 0%, #FFFFFF 100%);
}

.loading-spinner {
  width: 100rpx;
  height: 100rpx;
  border: 6rpx solid #E8E8E3;
  border-top: 6rpx solid #2C2C2C;
  border-radius: 50%;
  animation: spin 1.2s linear infinite;
  margin-bottom: 60rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 36rpx;
  font-weight: 300;
  color: #666;
  letter-spacing: 2rpx;
  text-align: center;
  line-height: 1.5;
}

/* 报告内容 */
.report-content {
  padding: 60rpx 40rpx 180rpx;
  max-width: 100%;
  overflow-x: hidden;
}

/* AI生成的专属形象图片区域 */
.avatar-image-section {
  width: 100%;
  margin-bottom: 60rpx;
  border-radius: 24rpx;
  overflow: hidden;
  background: #FFFFFF;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.08);
}

.avatar-image {
  width: 100%;
  height: auto;
  display: block;
}

/* 调试信息区域 - 临时 */
.avatar-debug-section {
  width: 100%;
  margin-bottom: 60rpx;
  padding: 40rpx;
  border-radius: 24rpx;
  background: #FFF9E6;
  border: 2rpx dashed #FFB800;
}

.debug-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 10rpx;
  word-break: break-all;
}

/* 头部信息 - 按需求文档设计 */
.report-header {
  text-align: center;
  margin-bottom: 60rpx;
  padding: 80rpx 40rpx;
  background: linear-gradient(135deg, #FFFFFF 0%, #F9F9F9 100%);
  border: 1rpx solid #E8E8E3;
  border-radius: 24rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

/* 第一行容器：让季型名称和能量类型名称并排显示 */
.header-first-line {
  display: flex;
  align-items: flex-end; /* 改为底部对齐 */
  justify-content: center;
  gap: 40rpx; /* 两个字段之间的间距 */
  margin-bottom: 40rpx;
}

.user-type {
  font-size: 64rpx;
  font-weight: 300;
  color: #2C2C2C;
  letter-spacing: 4rpx;
  margin-bottom: 0; /* 移除bottom margin，由容器控制 */
  line-height: 1.2;
}

.user-subtype {
  font-size: 40rpx;
  font-weight: 300;
  color: #666;
  letter-spacing: 2rpx;
  margin-bottom: 0; /* 移除bottom margin，由容器控制 */
  line-height: 1.3;
}

.type-description {
  font-size: 32rpx;
  font-weight: 300;
  color: #999;
  letter-spacing: 1rpx;
  line-height: 1.6;
  max-width: 600rpx;
  margin: 0 auto 20rpx;
}

.energy-description {
  font-size: 30rpx;
  font-weight: 300;
  color: #666;
  letter-spacing: 1rpx;
  line-height: 1.7;
  max-width: 600rpx;
  margin: 0 auto;
}

/* 报告卡片 */
.report-card {
  background: #FFFFFF;
  border: 1rpx solid #E8E8E3;
  border-radius: 24rpx;
  padding: 50rpx 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.card-title {
  font-size: 44rpx;
  font-weight: 300;
  color: #2C2C2C;
  letter-spacing: 2rpx;
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  /* border-bottom: 2rpx solid #E8E8E3; 移除横线 */
  text-align: center;
  display: block;
  width: 100%;
}

.card-content {
  font-size: 36rpx;
  font-weight: 300;
  color: #666;
  letter-spacing: 1rpx;
  line-height: 1.8;
}

/* 色彩建议网格 */
.color-palette {
  display: grid;
  grid-template-columns: repeat(4, 1fr); /* 改成4列 */
  gap: 12rpx; /* 进一步减少间距以为文字让出更多空间 */
  margin-bottom: 20rpx;
  justify-items: center;
  width: 100%;
  margin-left: auto;
  margin-right: auto;
}

.color-item {
  text-align: center;
  padding: 8rpx; /* 进一步减少内边距以留出更多空间给文字 */
}

.color-swatch {
  width: 100rpx;  /* 稍微减小以适应4列布局 */
  height: 100rpx; /* 稍微减小以适应4列布局 */
  border-radius: 16rpx; /* 圆角方形 */
  margin: 0 auto 16rpx;
  border: 2rpx solid #E8E8E3;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.color-name {
  font-size: 26rpx; /* 从32rpx减小到26rpx */
  font-weight: 300;
  color: #2C2C2C;
  letter-spacing: 0.3rpx; /* 进一步减少字间距 */
  line-height: 1.3;
  word-break: keep-all; /* 防止中文字符被拆分 */
  text-align: center;
  max-width: 100%; /* 确保使用全部可用宽度 */
  min-height: 2.6em; /* 为两行文字预留足够高度 */
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 风格建议列表 */
.style-suggestions {
  margin-bottom: 20rpx;
}

.suggestion-item {
  background: #F5F5F0;
  border: 1rpx solid #E8E8E3;
  border-radius: 16rpx;
  padding: 32rpx 40rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.suggestion-button {
  cursor: pointer;
  transition: all 0.3s ease;
}

.suggestion-button:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.suggestion-text {
  font-size: 36rpx;
  font-weight: 300;
  color: #666;
  letter-spacing: 1rpx;
  line-height: 1.5;
  text-align: left;
  flex: 1;
}

/* 推荐风格箭头 */
.suggestion-arrow {
  font-size: 32rpx;
  font-weight: 300;
  color: #999;
  margin-left: 24rpx;
  opacity: 0.8;
  flex-shrink: 0;
}

/* 推荐材质 - 一行四个布局 */
.season-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr; /* 一行四列 */
  gap: 20rpx; /* 增大间距 */
  margin-top: 40rpx;
}

.season-card {
  position: relative;
  width: 100%;
  aspect-ratio: 1/3; /* 1:3比例，细长的窄条 */
  border-radius: 20rpx; /* 保持圆角 */
  overflow: hidden;
  background: #FFFFFF;
  border: 1rpx solid #E8E8E3;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  cursor: pointer;
}

.season-card:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.season-bg-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 季节卡片覆盖层 - 包含文字和图标 */
.season-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  pointer-events: none;
}

/* 季节卡片右上角加号图标 */
.season-icon {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  font-size: 32rpx;
  font-weight: 300;
  color: #FFFFFF;
  text-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.8);
  opacity: 0.9;
}

/* 季节卡片居中文字 */
.season-label {
  font-size: 44rpx;
  font-weight: 100;
  color: rgba(255, 255, 255, 0.95);
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.5);
  letter-spacing: 8rpx;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  transform: scaleY(0.98);
}

.season-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  /* 移除背景遮罩和模糊效果 */
}

.season-label {
  font-size: 48rpx;
  font-weight: 500; /* 增加字体粗细，更清晰 */
  color: #FFFFFF;
  letter-spacing: 4rpx;
  text-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.8), 0 0 20rpx rgba(0, 0, 0, 0.6); /* 增强文字阴影，确保在任何背景上都清晰可见 */
}

/* 材质详情弹窗 */
.material-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  padding: 40rpx;
  box-sizing: border-box;
}

.modal-content {
  background: #FFFFFF;
  border-radius: 20rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow-y: auto;
  position: relative;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.2);
  transform-origin: center;
  animation: modalSlideIn 0.3s ease-out forwards;
}


.modal-season-header {
  display: flex;
  align-items: center;
  padding: 40rpx 40rpx 30rpx;
  border-bottom: 1rpx solid #E8E8E3;
}

.season-line {
  width: 6rpx;
  height: 40rpx;
  background: #2C2C2C;
  margin-right: 24rpx;
  border-radius: 3rpx;
}

.modal-season-name {
  font-size: 44rpx;
  font-weight: 300;
  color: #2C2C2C;
  letter-spacing: 2rpx;
}

.modal-material-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 40rpx;
}

.modal-material-item {
  background: linear-gradient(135deg, #F5F5F0 0%, #FFFFFF 100%);
  border: 1rpx solid #E8E8E3;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.modal-material-name {
  font-size: 36rpx;
  font-weight: 300;
  color: #2C2C2C;
  letter-spacing: 1rpx;
  line-height: 1.4;
  margin-bottom: 12rpx;
}

.modal-material-reason {
  font-size: 30rpx;
  font-weight: 300;
  color: #666;
  letter-spacing: 0.5rpx;
  line-height: 1.6;
}

/* 弹窗动画 */
.modal-content {
  transform-origin: center;
  animation: modalSlideIn 0.3s ease-out forwards;
}

@keyframes modalSlideIn {
  0% {
    opacity: 0;
    transform: scale(0.8);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

.modal-slide-out {
  animation: modalSlideOut 0.3s ease-in forwards;
}

@keyframes modalSlideOut {
  0% {
    opacity: 1;
    transform: scale(1);
  }
  100% {
    opacity: 0;
    transform: scale(0.8);
  }
}

/* 场合穿搭 - 按钮布局 */
.occasion-buttons {
  display: flex;
  flex-direction: column;
  gap: calc(16rpx + 0.1cm);
  margin-top: 40rpx;
}

.occasion-button {
  position: relative;
  width: 100%;
  aspect-ratio: 4/1; /* 4:1比例 */
  border-radius: 16rpx;
  overflow: hidden;
  background: #FFFFFF;
  border: 1rpx solid #E8E8E3;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08), 0 1rpx 3rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
  cursor: pointer;
}

.occasion-button:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.12), 0 1rpx 2rpx rgba(0, 0, 0, 0.08);
}

.occasion-button:hover {
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.12), 0 2rpx 6rpx rgba(0, 0, 0, 0.08);
  transform: translateY(-2rpx);
}

.occasion-bg-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
}

.occasion-button:active .occasion-bg-image {
  transform: scale(1.02);
}

/* 场合穿搭覆盖层 - 包含文字和箭头 */
.occasion-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
  pointer-events: none;
  background: linear-gradient(90deg, rgba(0, 0, 0, 0.15) 0%, rgba(0, 0, 0, 0.05) 60%, rgba(0, 0, 0, 0) 100%);
  box-sizing: border-box;
}

/* 场合穿搭名称 */
.occasion-label {
  font-size: 36rpx;
  font-weight: 300;
  color: #FFFFFF;
  text-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.8);
  letter-spacing: 1rpx;
  flex: 0 1 auto;
  max-width: calc(100% - 80rpx);
}

/* 场合穿搭箭头 */
.occasion-arrow {
  font-size: 36rpx;
  font-weight: 300;
  color: #FFFFFF;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.6);
  margin-left: 24rpx;
  opacity: 0.9;
  flex-shrink: 0;
}

/* 场合弹窗 */
.occasion-modal {
  position: fixed;
  top: 0;
